<ul>
    <li><%= @cocktail.name %></li>

    <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %></li>
    <% end %>

    <% @cocktail.ingredients.each do |ingredient| %>
    <li><%= ingredient.name %></li>
    <% end %>
</ul>

<%= link_to "Add new dose", new_cocktail_dose_path(@cocktail) %>
